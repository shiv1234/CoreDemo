@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">

    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
                <img class="card-img-top" src="~/Image/noimage.png" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-Id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-dangery m-1">Delet</a>
                </div>
            </div>
        </div>
    }
</div>


